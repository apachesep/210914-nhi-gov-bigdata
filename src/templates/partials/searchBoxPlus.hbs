{{!-- {{>searchBoxPlus form=false selectFirst=true selectOptionName='全部' 2ndSelect=false 2ndSelectOptionName='And' 2ndSearchBox=false placeholder='請輸入關鍵字' btnSearchFull=false searchButtonName='搜尋'}} --}}
<!-- searchBoxPlus -->
<div class="searchPlus">
	<!-- grid -->
	<div class="uk-grid uk-grid-small uk-child-width-expand" uk-grid>
		<!-- /input & select -->
		<div class="searchInput uk-width-expand@m">
			<!-- grid -->
			<div class="uk-grid uk-grid-column-collapse uk-grid-row-small uk-child-width-expand" uk-grid>
				<!-- searchBox -->
				<div class="searchBox min_width-9/10 uk-width-expand@s">
					<!-- uk-alert -->
					<div class="tw-p-3{{alertClass}} uk-alert" uk-alert>
						<!-- grid -->
						<div class="uk-flex-stretch uk-grid uk-grid-small uk-child-width-expand" uk-grid>
							<!-- inputBox -->
							<div class="inputBox uk-width-expand">
								<!-- grid -->
								<div class="uk-grid uk-grid-small uk-child-width-expand" uk-grid>
									{{#if selectFirst}}
									<!-- select -->
									<div class="firstSelect min_width-150 uk-width-1-2 uk-width-auto@s">
										<label class="tw-sr-only" for="sl1">選項</label>
										<select id="sl1" class="uk-select">
											<option value="0" selected>{{selectOptionName}}</option>
											<option value="">option</option>
										</select>
									</div>
									<!-- /select -->
									{{#if 2ndSelect}}
									<!-- select -->
									<div class="secondSelect min_width-150 uk-width-1-2 uk-width-auto@s">
										<label class="tw-sr-only" for="sl2">選項</label>
										<select id="sl2" class="uk-select">
											<option value="0" selected>{{2ndSelectOptionName}}</option>
											<option value="">option</option>
										</select>
									</div>
									<!-- /select -->
									{{/if}}
									<!-- input -->
									<div class="input min_width-1/2 uk-width-expand@s">
										<!-- flex -->
										<div class="uk-flex uk-flex-middle">
											<div class="tw-flex-auto">
												<label class="tw-sr-only" for="ip1">輸入</label>
												<input id="ip1" class="uk-input" type="text" placeholder="{{placeholder}}" title="{{placeholder}}">
											</div>
											{{#if 2ndInput}}
											<div class="tw-px-2">或</div>
											<div class="tw-flex-auto">
												<label class="tw-sr-only" for="ip2">輸入</label>
												<input id="ip2" class="uk-input" type="text" placeholder="{{2ndPlaceholder}}" title="{{2ndPlaceholder}}">
											</div>
											{{/if}}
										</div>
										<!-- /flex -->
									</div>
									<!-- /input -->
									{{else}}
									<!-- input -->
									<div class="input min_width-1/2 uk-width-expand@s">
										<!-- flex -->
										<div class="uk-flex uk-flex-middle">
											<div class="tw-flex-auto">
												<label class="tw-sr-only" for="ip1">輸入</label>
												<input id="ip1" class="uk-input" type="text" placeholder="{{placeholder}}" title="{{placeholder}}">
											</div>
											{{#if 2ndInput}}
											<div class="tw-px-2">或</div>
											<div class="tw-flex-auto">
												<label class="tw-sr-only" for="ip2">輸入</label>
												<input id="ip2" class="uk-input" type="text" placeholder="{{2ndPlaceholder}}" title="{{2ndPlaceholder}}">
											</div>
											{{/if}}
										</div>
										<!-- /flex -->
									</div>
									<!-- /input -->
									<!-- select -->
									<div class="firstSelect min_width-150 uk-width-1-2 uk-width-auto@s">
										<label class="tw-sr-only" for="sl1">選項</label>
										<select id="sl1" class="uk-select">
											<option value="0" selected>{{selectOptionName}}</option>
											<option value="">option</option>
										</select>
									</div>
									<!-- /select -->
									{{#if 2ndSelect}}
									<!-- select -->
									<div class="secondSelect min_width-150 uk-width-1-2 uk-width-auto@s">
										<label class="tw-sr-only" for="sl2">選項</label>
										<select id="sl2" class="uk-select">
											<option value="0" selected>{{2ndSelectOptionName}}</option>
											<option value="">option</option>
										</select>
									</div>
									<!-- /select -->
									{{/if}}
									{{/if}}
								</div>
								<!-- /grid -->
							</div>
							<!-- /inputBox -->
							<!-- button remove -->
							<div class="btnRemove tw-hidden uk-width-auto"><a href="javascript:void(0);" class="min_width-60 tw-static tw-h-full uk-flex uk-flex-middle uk-flex-center" title="刪除" uk-close><span class="tw-sr-only">刪除</span></a></div>
							<!-- /button remove -->
						</div>
						<!-- /grid -->
					</div>
					<!-- /uk-alert -->
				</div>
				<!-- /searchBox -->
				{{#if 2ndSearchBox}}
				<div class="2ndSearchBox min_width-9/10 uk-width-expand@s">
					<div class="tw-p-3 uk-alert" uk-alert>
						<div class="uk-flex-stretch uk-grid uk-grid-small uk-child-width-expand" uk-grid>
							<div class="inputBox uk-width-expand">
								<div class="uk-grid uk-grid-small uk-child-width-expand" uk-grid>
									{{#if selectFirst}}
									<div class="firstSelect min_width-150 uk-width-1-2 uk-width-auto@s@s">
										<select class="uk-select">
											<option value="0" selected>{{selectOptionName}}</option>
											<option value="">option</option>
										</select>
									</div>
									<div class="input min_width-1/2 uk-width-expand@s">
										<div class="uk-flex uk-flex-middle">
											<div class="tw-flex-auto"><input class="uk-input" type="text" placeholder="{{placeholder}}" title="{{placeholder}}"></div>
											{{#if 2ndInput}}
											<div class="tw-px-2">或</div>
											<div class="tw-flex-auto"><input class="uk-input" type="text" placeholder="{{2ndPlaceholder}}" title="{{2ndPlaceholder}}"></div>
											{{/if}}
										</div>
									</div>
									{{else}}
									<div class="input min_width-1/2 uk-width-expand@s">
										<div class="uk-flex uk-flex-middle">
											<div class="tw-flex-auto"><input class="uk-input" type="text" placeholder="{{placeholder}}" title="{{placeholder}}"></div>
											{{#if 2ndInput}}
											<div class="tw-px-2">或</div>
											<div class="tw-flex-auto"><input class="uk-input" type="text" placeholder="{{2ndPlaceholder}}" title="{{2ndPlaceholder}}"></div>
											{{/if}}
										</div>
									</div>
									<div class="firstSelect min_width-150 uk-width-1-2 uk-width-auto@s@s">
										<select class="uk-select">
											<option value="0" selected>{{selectOptionName}}</option>
											<option value="">option</option>
										</select>
									</div>
									{{/if}}
								</div>
							</div>
							<div class="btnRemove tw-hidden uk-width-auto"><a class="min_width-60 tw-static tw-h-full uk-flex uk-flex-middle uk-flex-center" uk-close></a></div>
						</div>
					</div>
				</div>
				{{/if}}
				<!-- button add -->
				<div class="btnAdd min_width-75 uk-width-auto@s">
					<div class="uk-flex uk-flex-middle">
						<button id="btnAdd" class="min_height-67@s m:tw-pl-0 m:tw-pr-2 tw-bg-transparent tw-w-full uk-button uk-button-primary"><i class="color_primary fas fa-plus fa-lg" title="新增選項"></i><span class="tw-sr-only">新增選項</span></button>
					</div>
				</div>
				<!-- /button add -->
			</div>
			<!-- /grid -->
		</div>
		<!-- /input & select -->
		{{#if option}}
		<!-- option -->
		<div class="option uk-width-1-1">
			<p class="tw-text-base tw-font-medium uk-form-label">縮小查詢範圍</p>
			<!-- grid -->
			<div class="uk-grid uk-grid-row-small uk-grid-column-small uk-flex-top{{#if stack}} uk-flex-column{{else}} uk-child-width-expand@s{{/if}}" uk-grid>
				<!-- grid item -->
				<div class="uk-width-1-1">
					<!-- radio -->
					<div class="uk-grid uk-grid-small uk-child-width-auto">
						<label><input class="tw-mr-1 uk-radio" type="radio" name="type" checked>精確檢索</label>
						<label><input class="tw-mr-1 uk-radio" type="radio" name="type">模糊檢索</label>
						<label><input class="tw-mr-1 uk-radio" type="radio" name="type">完全符合</label>
					</div>
					<!-- /radio -->
				</div>
				<!-- /grid item -->
				<!-- grid item -->
				<div class="{{#if stack}}tw-mx-auto{{stackClass}}{{else}}min_width-1/3!@s{{/if}} uk-grid-margin" uk-marin>
					<label class="tw-text-base tw-font-medium tw-mb-1 tw-block uk-form-label" for="dt">資料類型</label>
					<select id="dt" class="uk-select">
						<option value="">全部</option>
					</select>
				</div>
				<!-- /grid item -->
				<!-- grid item -->
				<div id="source" class="{{#if stack}}tw-mx-auto{{stackClass}}{{else}}min_width-1/3!@s{{/if}} uk-grid-margin" uk-marin>
					<label class="tw-text-base tw-font-medium tw-mb-1 tw-block uk-form-label" for="sc">出處/學術領域</label>
					<select id="sc" class="uk-select" multiple>
						<option value="">請先選擇資料類型</option>
					</select>
				</div>
				<!-- /grid item -->
				<!-- grid item -->
				<div class="{{#if stack}}tw-mx-auto{{stackClass}}{{else}}min_width-1/3!@s{{/if}} uk-grid-margin" uk-marin>
					<label class="tw-text-base tw-font-medium tw-mb-1 tw-block uk-form-label" for="sc">英文字母首字</label>
					<select id="sc" class="uk-select">
						<option value="">All</option>
					</select>
				</div>
				<!-- /grid item -->
			</div>
			<!-- /grid -->
		</div>
		<!-- /option -->
		{{/if}}
		<!-- button -->
		<div class="btnSearch min_width-200 uk-text-nowrap{{#if btnSearchFull}} uk-width-1-1{{else}} uk-width-auto@s{{/if}}">
			<a class="{{#if btnSecondary}}btn_secondary {{else}}btn_primary {{/if}}tw-w-full uk-button uk-button-primary" href="#"><i class="tw-mr-2 fas fa-search"></i>{{searchButtonName}}</a>
		</div>
		<!-- /button -->
	</div>
	<!-- /grid -->
</div>
<!-- /searchBoxPlus -->